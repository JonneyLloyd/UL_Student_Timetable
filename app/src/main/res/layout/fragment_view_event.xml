<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimetableActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:elevation="8dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:id="@+id/eventFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="30dp">


            <LinearLayout
                style="@style/AppTheme.EventDialogField">

                <ImageView
                    android:id="@+id/dateTimeIcon"
                    android:background="@drawable/ic_access_time"
                    style="@style/AppTheme.EventDialogFieldIcon" />

                <TextView
                    android:id="@+id/dayTextView"
                    style="@style/AppTheme.EventDialogFieldContent.Large"
                    android:layout_weight="1"
                    android:layout_width="0dp" />

                <TextView
                    android:id="@+id/startTimeTextView"
                    style="@style/AppTheme.EventDialogFieldContent.Large"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp" />

                <ImageView
                    android:id="@+id/timeSeparatorIcon"
                    android:background="@drawable/ic_arrow_forward"
                    style="@style/AppTheme.EventDialogFieldIcon"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/endTimeTextView"
                    style="@style/AppTheme.EventDialogFieldContent.Large"
                    android:layout_width="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                style="@style/AppTheme.EventDialogField">

                <ImageView
                    android:id="@+id/moduleCodeIcon"
                    android:background="@drawable/ic_label"
                    style="@style/AppTheme.EventDialogFieldIcon" />

                <TextView
                    android:id="@+id/moduleCodeTextView"
                    style="@style/AppTheme.EventDialogFieldContent" />

            </LinearLayout>

            <LinearLayout
                style="@style/AppTheme.EventDialogField">

                <ImageView
                    android:id="@+id/titleIcon"
                    android:background="@drawable/ic_info"
                    style="@style/AppTheme.EventDialogFieldIcon" />

                <TextView
                    android:id="@+id/titleTextView"
                    style="@style/AppTheme.EventDialogFieldContent" />

            </LinearLayout>

            <LinearLayout
                style="@style/AppTheme.EventDialogField">

                <ImageView
                    android:id="@+id/typeIcon"
                    android:background="@drawable/ic_info"
                    style="@style/AppTheme.EventDialogFieldIcon" />

                <TextView
                    android:id="@+id/typeTextView"
                    style="@style/AppTheme.EventDialogFieldContent" />

            </LinearLayout>

            <LinearLayout
                style="@style/AppTheme.EventDialogField">

                <ImageView
                    android:id="@+id/locationIcon"
                    android:background="@drawable/ic_location_on"
                    style="@style/AppTheme.EventDialogFieldIcon" />

                <TextView
                    android:id="@+id/locationTextView"
                    style="@style/AppTheme.EventDialogFieldContent" />

            </LinearLayout>

            <LinearLayout
                style="@style/AppTheme.EventDialogField">

                <ImageView
                    android:id="@+id/weeksIcon"
                    android:background="@drawable/ic_date_range"
                    style="@style/AppTheme.EventDialogFieldIcon" />

                <TextView
                    android:text="New Text"
                    android:id="@+id/weeksTextView"
                    style="@style/AppTheme.EventDialogFieldContent" />

            </LinearLayout>

            <LinearLayout
                style="@style/AppTheme.EventDialogField">

                <ImageView
                    android:id="@+id/notesIcon"
                    android:background="@drawable/ic_subject"
                    style="@style/AppTheme.EventDialogFieldIcon" />

                <TextView
                    android:text="Notes"
                    android:id="@+id/notesTextView"
                    style="@style/AppTheme.EventDialogFieldContent" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
